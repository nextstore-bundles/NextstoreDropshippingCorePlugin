<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Nextstore\SyliusDropshippingCorePlugin\Model\OnlineStoreImage">
        <property name="file">
            <constraint name="Image">
                <option name="maxSize">2M</option>
                <option name="maxSizeMessage">
                nextstore_sylius_dropshipping_core.online_store_image.file.max_size</option>
                <option
                    name="uploadIniSizeErrorMessage">
                nextstore_sylius_dropshipping_core.online_store_image.file.upload_ini_size</option>
                <option
                    name="groups">nextstore_sylius_dropshipping_core</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
